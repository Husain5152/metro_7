<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_set_pr_line_supplier_wizard" model="ir.ui.view">
            <field name="name">view_set_pr_line_supplier_wizard</field>
            <field name="model">set.pr.line.supplier.wizard</field>
            <field name="arch" type="xml">
                <form string="Set Supplier for PR Line" version="7.0">
                    <separator string="Please select the supplier to set for all lines"/>
                    <group>
                        <field name="supplier_id"/>
                        <field name="pr_id"/>
                        <field name="pr_line_ids"/>
                    </group>
                    <footer>
                        <button name="do_set" string="Set Supplier" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>